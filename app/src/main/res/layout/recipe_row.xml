<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.031" >

        <RelativeLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/recipeImageID"
                android:background="@android:color/background_dark"
                android:layout_width="165dp"
                android:layout_height="110dp" />


            <TextView
                android:id="@+id/recipeNameID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/recipeImageID"
                android:paddingLeft="5dp"
                android:text="Recipe Name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/caloriesID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recipeNameID"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/recipeImageID"
                android:padding="5dp"
                android:text="Calories:" />

            <TextView
                android:id="@+id/recipeCatID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/caloriesID"
                android:layout_toRightOf="@id/recipeImageID"
                android:padding="5dp"
                android:text="Cuisine" />






        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>